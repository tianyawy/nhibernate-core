<?xml version='1.0' encoding='utf-8'?>
<hibernate-mapping
  default-access="field.pascalcase-underscore"
	assembly='NHibernate.Test'
	namespace='NHibernate.Test.SubclassFilterTest'
	xmlns='urn:nhibernate-mapping-2.2'>
  
  <class name='User' table='Users'>
    <id name="Id" column="id">
      <generator class="native"/>
    </id>    
    
    <one-to-one name="staff"/>
  </class>

  <class name='Office' table='Offics'>
    <id name="Id" column="id">
      <generator class="native"/>
    </id>
    
    
  </class>

 
  
	<class name="Staff" table="Staffs">

		<id name="Id" column="id">
			<generator class="native"/>
		</id>

		<property name="Name"/>
		

		<joined-subclass name="OfficeStaff">
			<key column="id" />
			<one-to-one name="Office" class="Office" cascade="none"/>
		</joined-subclass>

		<joined-subclass name="UserStaff">
			<key column="id" />
			<many-to-one name="Users"/>
		</joined-subclass>

		<filter name="region" condition="Region = :userRegion"/>

	</class>

</hibernate-mapping>